{
  "name": "esy-glib",
  "version": "2.58.3000",
  "description": "glib packaged for esy",
  "esy": {
    "exportedEnv": {
      "CFLAGS": {
        "scope": "global",
        "val": "-I#{self.install / 'include'} $CFLAGS"
      },
      "LDFLAGS": {
        "scope": "global",
        "val": "-L#{self.lib} $LDFLAGS"
      }
    },
    "buildsInSource": true,
    "build": [
      "./configure --prefix #{self.install}",
      "make"
    ],
    "install": [
      "make install"
    ]
  }
}
